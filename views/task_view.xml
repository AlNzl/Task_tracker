<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="task_view_form" model="ir.ui.view">
        <field name="name">task.view.form</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="stage_id"/>
                    <field name="worker_id"/>
                    <field name="priority"/>
                    <field name="responsible_id"/>
                    <field name="project_id"/>
                    <field name="time_ids"/>
                    <field name="total_time" widget="float_time"/>
                </group>
            </form>
        </field>
    </record>
    <record id="task_view_tree" model="ir.ui.view">
        <field name="name">task.view.tree</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="stage_id"/>
                <field name="worker_id"/>
                <field name="priority"/>
                <field name="responsible_id"/>
                <field name="project_id"/>
                <field name="time_ids"/>
                <field name="total_time" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="task_view_kanban" model="ir.ui.view">
        <field name="name">task.view.kanban</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>Name:<strong><field name="name"/></strong></li>
                                    <li>Description:<field name="description"/></li>
                                    <li>Responsible person:<field name="responsible_id"/></li>
                                    <li>Stage:<field name="stage_id"/></li>
                                    <li><field name="priority" widget="priority" class="mr-3"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="task_action" model="ir.actions.act_window">
        <field name="name">Task</field>
        <field name="res_model">task</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

        <menuitem name="Task Tracker"
              id="task_tracker"
              action="task_action"
              sequence="1"/>

</odoo>