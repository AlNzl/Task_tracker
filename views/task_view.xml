<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_change_stage" model="ir.actions.server">
        <field name="name">Move to next stage</field>
        <field name="model_id" ref="model_task"/>
        <field name="binding_model_id" ref="Task_tracker.model_task"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.change_stage_tree_view()</field>
    </record>

    <record id="task_view_form" model="ir.ui.view">
        <field name="name">task.view.form</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <form string="Task">
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="priority" widget="priority" class="mr-3"/>
                        </h1>
                        <h1 class="oe_title">
                            <field name="name" placeholder="Task name" default_focus="1"/>
                        </h1>
                        <h2>
                            <field name="description" placeholder="Description"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="total_time" widget="float_time"/>
                            <field name="stage_id"/>
                        </group>
                        <group>
                            <field name="worker_id"/>
                            <field name="responsible_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Time tracker">
                            <field name="time_tracker_line_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="date"/>
                                    <field name="time" widget="float_time"/>
                                    <field name="worker_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="task_view_tree" model="ir.ui.view">
        <field name="name">task.view.tree</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="stage_id"/>
                <field name="worker_id"/>
                <field name="priority"/>
                <field name="responsible_id"/>
                <field name="project_id"/>
                <field name="time_tracker_line_ids"/>
                <field name="total_time" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="task_view_kanban" model="ir.ui.view">
        <field name="name">task.view.kanban</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id">
                <field name="stage_id"
                       options="{&quot;group_by_tooltip&quot;: {&quot;description&quot;: &quot;Description&quot;}}"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>Name:
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </li>
                                    <li>Description:
                                        <field name="description"/>
                                    </li>
                                    <li>Responsible person:
                                        <field name="responsible_id"/>
                                    </li>
                                    <li>Stage:
                                        <field name="stage_id"/>
                                    </li>
                                    <li>Project:
                                        <field name="project_id"/>
                                    </li>
                                    <li>
                                        <field name="priority" widget="priority" class="mr-3"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="task_form_search" model="ir.ui.view">
        <field name="name">task.search</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <search string="Task">
                <field name="name"/>
                <field name="stage_id"/>
                <field name="project_id"/>
                <field name="responsible_id"/>
                <group expand="1" string="Group By">
                    <filter string="Project" name="group_id" context="{'group_by':'project_id'}"/>
                    <filter string="Responsible" name="country_id" context="{'group_by':'responsible_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="task_action" model="ir.actions.act_window">
        <field name="name">Task</field>
        <field name="res_model">task</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

    <menuitem name="Task Tracker"
              id="task_tracker"
              action="task_action"
              sequence="1"/>

</odoo>