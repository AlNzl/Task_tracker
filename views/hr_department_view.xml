<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="hr_department_view_form_inherit_form" model="ir.ui.view">
        <field name="name">hr.department.form.inherit</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <button string="Test"/>
            </xpath>
        </field>
    </record>


    <record id="hr_department_action" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">hr.department</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

    <menuitem id="hr_department"
              name="Department"
              action="hr_department_action"
              parent="hr_employee_root"
              sequence="10"/>

</odoo>