<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="time_tracker_view_form" model="ir.ui.view">
        <field name="name">time.tracker.view.form</field>
        <field name="model">time.tracker</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="total_time" widget="float_time"/>
                    <field name="description"/>
                    <field name="data"/>
                    <field name="time" widget="float.time"/>
                    <field name="task_id"/>
                </group>
            </form>
        </field>
    </record>
    <record id="time_tracker_view_tree" model="ir.ui.view">
        <field name="name">time.tracker.view.tree</field>
        <field name="model">time.tracker</field>
        <field name="arch" type="xml">
            <tree>
                <field name="total_time" widget="float.time"/>
                <field name="description"/>
                <field name="data"/>
                <field name="time" widget="float_time"/>
                <field name="task_id"/>
            </tree>
        </field>
    </record>

    <record id="time_tracker_action" model="ir.actions.act_window">
        <field name="name">time.tracker</field>
        <field name="res_model">time.tracker</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

</odoo>